                    android:textSize="12sp"
                    android:text="Shellfish"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Wheat"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Soy"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSesame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Sesame"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Cuisine Preferences Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuisine Preferences"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cuisineGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGreek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Greek"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipItalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Italian"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMexican"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Mexican"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipJapanese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Japanese"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFrench"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="French"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipChinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Chinese"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipIndian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Indian"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipKorean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Korean"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Recipe Difficulty Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Difficulty"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/difficultyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Easy"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Medium"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:minWidth="90dp"
                    android:textSize="12sp"
                    android:text="Hard"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveSettings"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Save"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>